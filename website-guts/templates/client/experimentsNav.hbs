<li class="first">
  <a href="https://www.optimizely.com/dashboard?project_id={{account_id}}">Dashboard</a>
</li>
<li id="experiment-nav-item" class="hide-in-mobile" data-show-user-state="logged-in">
    <a href="" class="dropdown-arrow" data-dropdown="experiments">Experiments</a>
    <ul class="dropdown-menu-top" data-show-dropdown="experiments">
      <div class="message"></div>
      {{#each experiments}}
        <span class="experiment-container hide-in-mobile">
          <li>
            <a class="edit" 
              {{#if can_edit}}href="https://www.optimizely.com/edit?experiment_id={{id}}"{{/if}}
              {{#unless has_started}}style="width: auto;"{{/unless}}
              >
              <span class="experiment-description">{{description}}</span>
            </a>
            
            <a class="experiment-results" 
              {{#if can_edit}}href="https://www.optimizely.com/edit?experiment_id={{id}}"{{/if}}
              {{#unless has_started}}style="display: none;"{{/unless}}
              >
              {{#if has_started}}
              Results
              {{/if}}
            </a>
          </li>
        </span>
      {{/each}}
      <li class="view-all-experiments hide-in-mobile" data-show="dashboard-link">
        <a id="view-all-experiments-link" href="https://www.optimizely.com/dashboard?project_id={{account_id}}">
          <span>View All Experiments</span>
        </a>
      </li>
      <li class="show-create-experiment hide-in-mobile" data-modal-click="create-exp">
        <span>+&nbsp;</span><a >Create New Experiment</a>
      </li>
    </ul>
</li>
<li>
  <a href="https://help.optimizely.com/hc/en-us">Support</a>
</li>
<li id="my-account-menu">
      <a class="customer-email dropdown-arrow" data-dropdown="account">
        <span id="email-wrapper">{{email}}</span>
      </a>
    <ul id="account-dropdown" class="dropdown-menu-top" data-show-dropdown="account">
        <li class="hide-in-mobile">
          <a href="https://www.optimizely.com/account">Account Setting</a>
        </li>
        <li>
          <a data-logout >Log Out</a>
        </li>
    </ul>
</li>