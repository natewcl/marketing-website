---
layout: jobs.hbs
page_script: jobs.js


---
{{#if jobs.benefits}}
<div class="container benefits">
    <div class="row">
        {{#if jobs.benefits.header}}<h2 class="heading center a-center blue">{{jobs.benefits.header}}</h2>{{/if}}
        {{#if jobs.benefits.list}}
        <ul id="jobs-icons" class="list-unstyled">
          {{#each jobs.benefits.list}}
          {{#classgridstart @index 2}}
          <div class="row">
          {{/classgridstart}}
          <li id="{{id}}" class="columns five {{#is_odd @index}}offset-two{{/is_odd}}">
            <h6>{{header}}</h6>
            <p>{{body}}</p>
          </li>
          {{#classgridfinish @index @last 2}}
          </div>
          {{/classgridfinish}}
          {{/each}}
        </ul>
        {{/if}}
    </div>
</div>
{{/if}}
<div class="testimonials">
    <div class="container">
        <h4 class="a-center quotes">
            {{#each jobs.employee_testimonials}}
            <q {{#isnt @index 0}}class="hide"{{/isnt}}>{{quote}}</q>
            {{/each}}
        </h4>
        <ul class="employee-icons">
            {{#each jobs.employee_testimonials}}
            <li {{#isnt @index 0}}class="opaque"{{/isnt}}>
                <a href="#">
                    <img src="{{image}}">
                    <h5 class="name">{{name}}</h5>
                    <h6 class="employee-title">{{title}}</h6>
                </a>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="jobs-list" id="jobs-list">
    <div class="container">
        <div class="row">
            <div class="columns ten offset-one" id="job-list-cont">
                <h2 class="a-center blue">{{jobs.job_openings_header}}</h2>
            </div>
        </div>
    </div>
</div>
