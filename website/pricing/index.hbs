---
layout: pricing.hbs
seo_title: Pricing
visible_title: Plans and Pricing
body_class:
- pricing-page
---

<div class="row">
  <div class="columns twelve pill-cont">
    <p>Your current plan is <span>gold</span></p>
    <div class="pill">
      <a href="#" class="active">Month-to-Month</a>
      <a href="#">One Year (10% off)</a>
      <a href="#">Two Years (25% off)</a>
    </div>
  </div>
</div>

<div class="price-table row">
  {{#each pricing.levels}}
  <div class="pricing-col columns one-fourth">

    <div class="main-box">
      <h2>{{ title }}</h2>
      <div class="box-content">
        {{#notEqual title 'Platinum' }}
        <h3 class="pricing-trial-text">
          30 day free trial then
          <span><sup>$</sup>{{monthly_price}}</span>
          per month after trial period
        </h3>
        <h4>{{ save_text }}</h4>
        {{/notEqual}}
        {{#equal title 'Platinum' }}
        <h3 class="pricing-trial-text platinum">
          <span>Get a Demo</span>
          1-800-252-9480
        </h3>
        {{/equal}}
      </div>
        <div class="button-cont">
          {{#notEqual title 'Platinum' }}
          <a class="primary-button" href="#">
          Get Started
          </a>
          {{/notEqual}}
          {{#equal title 'Platinum' }}
          <a class="primary-button" href="#">
          Schedule Demo
          </a>
          {{/equal}}
        </div>
    </div>

    <div class="pricing-col-content">
      <div class="box visitor-content">
        {{#notEqual title 'Platinum' }}
        <p>{{addCommas monthly_visitors}} monthly visitors</p>
        {{/notEqual}}
        <p>{{{ cost_additional_visitors }}}</p>
      </div>
      <div class="box">
        <p>{{number_experiments}}</p>
      </div>
      <div class="box block-header{{#if @first}} first-col-feature{{/if}}">
        <h2 {{#if @first}}data-title="Platforms"{{/if}}>Platforms</h2>
      </div>

      <div class="box">
        <p>Web and Mobile Web</p>
      </div>
      <div class="box">
        <p>iOS (Beta)</p>
      </div>

      <div class="box block-header{{#if @first}} first-col-feature{{/if}}">
        <h2 {{#if @first}}data-title="Features" data-sup="1"{{/if}}>
          Features<sup>1</sup>
        </h2>
      </div>

      {{#features}}
        {{#if this.feature.value}}
        <div class="box">
          <p>{{this.feature.value}}
            {{#if this.feature.tooltip}}
            <span data-tooltip title="{{ this.feature.tooltip }}"></span>
            {{/if}}
          </p>
        </div>
        {{else}}
        <div class="box empty-val"></div>
        {{/if}}
      {{/features}}

      <div class="box block-header{{#if @first}} first-col-feature{{/if}}">
        <h2 {{#if @first}}data-title="Account Management"{{/if}}>Account Management</h2>
      </div>

      {{#account_management}}
        {{#if this.item.value}}
        <div class="box">
          <p>{{this.item.value}}
            {{#if this.item.tooltip}}
            <span data-tooltip title="{{ this.item.tooltip }}"></span>
            {{/if}}
          </p>
        </div>
        {{else}}
        <div class="box empty-val"></div>
        {{/if}}
      {{/account_management}}

      <div class="box block-header{{#if @first}} first-col-feature last-feature{{/if}}">
        <h2 {{#if @first}}data-title="Support & Customer Service" data-sup="2"{{/if}}>
          Support & Customer Service <sup>2</sup>
        </h2>
      </div>

     {{#support}}
       {{#if this}}
       <div class="box">
         <p>{{this}}</p>
       </div>
       {{else}}
        <div class="box empty-val"></div>
        {{/if}}
     {{/support}}
    </div>
  </div>
  {{/each}}
</div>
